{% extends '::base.html.twig' %}

{% block body -%}

{% include 'PilotNewslineBundle::menu.html.twig' %}

    <h1>Список авторов</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Логин</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('author_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.surname }}</td>
                <td>{{ entity.login }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('author_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('author_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('author_new') }}">
                Добавить автора
            </a>
        </li>
    </ul>
    {% endblock %}
